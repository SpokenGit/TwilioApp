@model TwilioWeb.Models.messages


@{
    ViewData["Title"] = "Form to Send a Text Message...!!!!!";
}



<div class="text-center">
    <h1 class="display-4">Form to Send a Text Message...!!!!!</h1>
</div>


<form asp-action="Create" class="form-horizontal">

    <div class="form-group">
        <label class="control-label col-sm-2" for="to_field">TO</label>
        <input asp-for="to_field" class="form-control" onkeypress="return validate(event)" placeholder="ENTER NUMBERS SEPARATED BY COMMA" />
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="message">MESSAGE:</label>
        <input asp-for="message" class="form-control" placeholder="ENTER A MESSAGE TO BE SENT" />
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" value="Save and Send" class="btn btn-primary" />

        </div>
    </div>
    <div id="msg">@ViewData["msg"]</div>

</form>
<br>
<br>
<br>

@*<div id="loader" data-request-url="@Url.Action("GetSentMessages", "Home")"></div>*@


@{

   
    IEnumerable<sentmessages> sent = ViewData["Sent"] as IEnumerable<sentmessages>;
}

<table id="grid" class="table table-striped table-bordered table-sm">
    <tr>
        <th>ID</th>
        <th>ID Message Table</th>
        <th>Confirmation Code</th>
        <th>Sent Date</th>
    </tr>
    @foreach (var item in sent)
    {
        <tr>
            <td>@Html.DisplayFor(m => item.Id)</td>
            <td>@Html.DisplayFor(m => item.messagesId)</td>
            <td>@Html.DisplayFor(m => item.cofirmationcode)</td>
            <td>@Html.DisplayFor(m => item.sentdate)</td>
        </tr>
    }
</table>


